<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    android:background="@drawable/rounded_dark_container"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvPatientName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Patient Name"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvPatientEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="patient.email@example.com"
        android:textColor="#AEAEB2"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tvPillCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Pills: C1: 0 | C2: 0"
        android:textColor="#E0E0E0"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnAdherence"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/view_my_adherence"
            android:textColor="#3F51B5"
            app:strokeColor="#3F51B5" />

        <Button
            android:id="@+id/btnChat"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:text="Chat with Patient"
            android:textColor="#009688"
            app:strokeColor="#009688" />

    </LinearLayout>

</LinearLayout>